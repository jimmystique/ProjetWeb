
{% extends 'base.html.twig' %}

{% block body %}
<h1> Vous cherchez un professeur ? </h1>
<div>{{ numberUser }} professeurs ont été trouvé !
  Modifiez les filtres pour affiner votre recherche ...
  {{form_start(form)}}
  {{form_row(form.level)}}
  {{form_row(form.subject)}}
  <button class="btn-primary">Valider</button>
  {{ form_end(form)}}
  <hr>
{%for user in users %}
{% if loop.index%2 == 0%}
<div class="card text-white bg-info mb-3 ">
{%elseif loop.index%2 == 1%}
<div class="card text-white bg-warning mb-3">
{%endif%}

  <div class="card-body">
    <h4 class="card-title">{{ user.firstname}}</h4>
   <div class="row">
   <div class="col-12 col-sm-4 col-md-4 col-lg-3">
        <img src="{{ user.ProfilePic  }}" id="profile_pic" class="col-lg-12 rounded-circle" >
   </div>
     <button type="button" id="show1" class="btn btn-secondary  col-12 col-sm-2 col-md-2 col-lg-2"> {{ user.quality1 }}</button>
     <button type="button" id="show2" class="btn btn-danger  col-12 col-sm-2 col-md-2 col-lg-2"> {{ user.quality2 }}</button>
   <button type="button" id="show3" class="btn btn-primary col-12 col-sm-2 col-md-2 col-lg-2"> {{ user.quality3 }} </button>
   <button type="button" id="show4" class="btn btn-success  col-12 col-sm-2 col-md-2 col-lg-2"> {{ user.quality4 }} </button>

</div>

<br>

  </div>
  <div class="card-footer"><a href="/user/{{ user.username }}"><button type="button"  class="btn btn-primary col-lg-12">Cliquez pour voir davantage</button></a></div>

</div>


{%endfor%}
<div class="navigation">
    {{ knp_pagination_render(users) }}
</div>

{% endblock %}
