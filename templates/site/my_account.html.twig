      <label id="label3" class="btn btn-primary col-6 col-sm-4 col-md-2 col-lg-3" onclick="updateSubject('physique')">
        <input type="radio" name="options" id="option3" autocomplete="off"> La physique
      </label>

      <label  id="label4"class="btn btn-primary col-6 col-sm-4 col-md-2 col-lg-3" onclick="updateSubject('svt')">
